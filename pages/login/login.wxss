/* pages/login/login.wxss */
page{
  height: 100%;
}
.body{
  height: 100%;
  background-image: url(http://www.qjlei.cn/images/login_bg.jpg);
  line-height:100%;
}
.top{
  height: 20%;
  padding-top: 20%;
  width: 40%;
  margin-left: 30%;
  text-align: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.form1{
  line-height:100%;
  text-align: center;
}
.user_name{
  display: flex;
  line-height:200%;
}
input{  
  text-align:center;
  height: 3rem;
  background-color: #FFFFFF;
  width:80%;
  margin: 0 0 2rem 10%;

}
.form1 button{
  width: 80%;
  background-color: green;
  color: white;
}
.bottom{
  display: flex;
  width: 80%;
  text-align: center;
  margin: 4rem 0 0 10%;
  text-decoration:underline;
  color: white;
}
.bottom .forget_pwd{
  text-align: left;
  font-size: 1rem;  
  width: 50%;
}
.bottom .register{
  text-align: right;
  float: left;
  width: 50%;
  margin-right: 1rem;
}